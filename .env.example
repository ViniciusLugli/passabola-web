# API Backend URL
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Chatbot API URL
# URL do serviço de chatbot (IA assistente)
NEXT_PUBLIC_CHATBOT_URL=http://localhost:5000

# WebSocket URL para chat em tempo real (SockJS endpoint)
NEXT_PUBLIC_CHAT_WS_URL=http://localhost:8080/ws-chat-sockjs

# WebSocket URL para notificações em tempo real (SockJS endpoint)
NEXT_PUBLIC_NOTIFICATION_WS_URL=http://localhost:8080/ws-sockjs

# Habilitar/Desabilitar WebSocket (true/false)
# Use false se o backend ainda não está configurado para WebSocket
# Quando desabilitado, notificações e chat funcionam via HTTP (fallback)
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
